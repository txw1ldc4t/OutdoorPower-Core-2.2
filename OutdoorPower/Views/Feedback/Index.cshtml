@model Feedback
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <form asp-controller="Feedback" asp-action="Index" method="post" class="form-horizontal" role="form">
        <div class="form-group row">
            <label asp-for="Name" class="col-md-2 col-form-label" control-label></label>
            <div class="col-md-5">
                <select asp-for="Name" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Email" class="col-md-2 col-form-label" control-label></label>
            <div class="col-md-5">
                <select asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ContactMe" class="col-md-2 col-form-label" control-label></label>
            <div class="col-md-5">
                <select asp-for="ContactMe" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-offset-2 col-md-5">
                <input type="submit" class="btn-btn-primary" value="Send" />
            </div>
        </div>
    </form>

